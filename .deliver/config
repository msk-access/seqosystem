APP="dashboard"

AUTO_VERSION="commit-count+git-revision+branch-unless-master"
USING_DISTILLERY=true

BUILD_HOST="access01"
BUILD_USER="deploy"
BUILD_AT="/tmp/edeliver/access/builds"
RELEASE_STORE=deploy@access01:releases

MAIN_APP="$BUILD_AT/apps/$APP" # App to be deployed
RELEASE_DIR="$MAIN_APP/rel/$APP"

STAGING_HOSTS="access01"
STAGING_USER="deploy"
DELIVER_TO="/home/deploy"

PRODUCTION_HOSTS="access02"
PRODUCTION_USER="deploy"
DELIVER_TO="/home/deploy"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/deploy/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}

pre_erlang_clean_compile() {
  status "Installing NPM dependencies"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$MAIN_APP/assets'
    npm install
  "

  status "Building static files"
  __sync_remote "
      [ -f ~/.profile ] && source ~/.profile
      set -e

      cd '$MAIN_APP'
      mkdir -p priv/static
      cd '$MAIN_APP/assets'
      npm run deploy $SILENCE
   "

  status "Running phx.digest"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT'
    APP='$APP' MIX_ENV='$TARGET_MIX_ENV' $MIX_CMD phx.digest $SILENCE
    echo '$APP'
    echo '$REPLACE_OS_VARS'
    echo '$TARGET_MIX_ENV'
  "
}

